{
  "name": "pnpm-root",
  "private": true,
  "scripts": {
    "build": "pnpm -F lib build",
    "build:fast": "pnpm -F lib build:fast",
    "dev": "pnpm -F lib dev",
    "test": "pnpm -F lib test",
    "test:watch": "pnpm -F lib test:watch",
    "coverage": "pnpm -F lib coverage",
    "size": "size-limit",
    "prepare": "husky install",
    "prettier": "prettier",
    "lint": "eslint ./lib",
    "lint:fix": "eslint ./lib ./example --fix && yarn format",
    "type-check": "tsc --noEmit"
  },
  "description": "PNPM monorepo template",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.5",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@types/node": "^18.16.18",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "commitlint": "^17.6.5",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "size-limit": "^8.2.4",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5",
    "vite": "^4.3.9",
    "vitest": "^0.32.0"
  },
  "packageManager": "pnpm@7.9.0",
  "size-limit": [
    {
      "path": "./lib/dist/index.js",
      "limit": "15 kb"
    },
    {
      "path": "./lib/dist/index.mjs",
      "limit": "15 kb"
    }
  ]
}